<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movies"
            type="com.flaiker.popularmovies.viewmodels.MoviesViewModel" />
    </data>
    <android.support.v7.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_list"
        android:name="com.flaiker.popularmovies.MovieListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:itemView="@{movies.itemView}"
        app:items="@{movies.movies}"
        app:layoutManager="GridLayoutManager"
        app:spanCount="2"
        tools:context="com.flaiker.popularmovies.MovieListActivity"
        tools:listitem="@layout/movie_list_content" />
</layout>